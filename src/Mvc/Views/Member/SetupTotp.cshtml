@using Mvc.ViewModels.Account

@model SetupTotpViewModel
@{
    ViewData["Title"] = "設定 TOTP 驗證";

    var recoveryCodes = new List<string>();
    if (!string.IsNullOrEmpty(Model.RecoveryCodes))
    {
        recoveryCodes = Model.RecoveryCodes.Split(';').ToList();
    }
}

<div class="container">
    <div class="page-title">
        <h3>設定 TOTP</h3>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img class="brand" src="@Url.Content("~/images/bootstraper-logo.png")" alt="bootstraper logo">
                    </div>
                    <h4 class="mb-4 text-muted">設定 TOTP 驗證</h4>
                    <p>請使用 Google Authenticator 掃描下方 QR Code，或手動輸入金鑰：</p>
                    <div class="mb-3 text-center">
                        <img src="@Model.QrCodeImage" alt="TOTP QR Code" class="img-fluid" style="max-width: 300px;" />
                    </div>
                    <div class="mb-3 text-start">
                        <p>手動金鑰：<strong>@Model.ManualEntryKey</strong></p>
                    </div>
                    <div class="mb-3 text-start">
                        <p>請妥善保存以下備援驗證碼：</p>
                        <div class="row">
                            @foreach (var pair in recoveryCodes.Select((code, index) => new { code, index }))
                            {
                                <div class="col-6 mb-2">
                                    <span class="badge bg-secondary p-2 w-100 text-center">
                                        @pair.code
                                    </span>
                                </div>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <p class="text-danger mb-0 me-3">每組驗證碼僅可使用一次，請妥善記錄！</p>

                            <button type="button" class="btn btn-outline-primary" id="download">下載備援驗證碼 (.txt)</button>
                        </div>
                    </div>
                    <form id="frmForm" asp-controller="Member"
                          asp-action="SetupTotp" method="post" autocomplete="off" novalidate>
                        <div class="mb-3 text-start">
                            <label asp-for="Code" class="form-label">請輸入 App 產生的 6 位數驗證碼：</label>
                            <input asp-for="Code" class="form-control" placeholder="輸入驗證碼">
                        </div>
                        <div class="row mb-4">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary mb-4" style="width:100%">啟用</button>
                            </div>
                            <div class="col-6">
                                <a class="btn btn-secondary w-100" asp-action="Profile">取消</a>
                            </div>
                        </div>
                        <input type="hidden" asp-for="QrCodeImage" />
                        <input type="hidden" asp-for="ManualEntryKey" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#download').on('click', function () {
            let content = '';
            $('.badge').each(function () {
                content += $(this).text().trim() + '\n';
            });

            const blob = new Blob([content], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);

            const a = $('<a>')
                .attr('href', url)
                .attr('download', '備援驗證碼.txt')
                .appendTo('body');

            a[0].click();
            a.remove();

            URL.revokeObjectURL(url);
        });
    </script>
}