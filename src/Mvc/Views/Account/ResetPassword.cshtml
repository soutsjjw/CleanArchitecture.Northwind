@model Mvc.ViewModels.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
    ViewData["Title"] = "重設密碼";
}

<div class="auth-content">
    <div class="card">
        <div class="card-body text-center">
            <div class="mb-4">
                <img class="brand" src="@Url.Content("~/images/bootstraper-logo.png")" alt="bootstraper logo">
            </div>
            <h3 class="mb-4 text-muted">重設密碼</h3>
            <form id="resetPwdForm" asp-action="ResetPassword" method="post" autocomplete="off">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="ResetCode" />

                <div class="form-group mb-3 text-start">
                    <label asp-for="NewPassword" class="form-label">新密碼</label>
                    <div class="input-group input-group-flat">
                        <input asp-for="NewPassword" class="form-control" type="password" autocomplete="new-password" />
                        <span class="input-group-text">
                            <i class="fa-solid fa-eye-slash" id="toggleNewPassword"
                               style="cursor: pointer" onclick="togglePassword('NewPassword')"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group mb-3 text-start">
                    <label asp-for="ConfirmPassword" class="form-label">確認新密碼</label>
                    <div class="input-group input-group-flat">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                        <span class="input-group-text">
                            <i class="fa-solid fa-eye-slash" id="toggleConfirmPassword"
                               style="cursor: pointer" onclick="togglePassword('ConfirmPassword')"></i>
                        </span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary w-100">重設密碼</button>
                    </div>
                    <div class="col-6">
                        <a class="btn btn-secondary w-100" asp-action="Login">返回登入</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @* <script>
        window.addEventListener('pageshow', function (e) {
          if (e.persisted) location.reload();
        });
    </script> *@

    <script>
        $("#resetPwdForm").validate({
            errorClass: "input-validation-error",
            errorPlacement: function() {},
            rules: {
                NewPassword: {
                    required: true,
                    minlength: 12,
                    pwHasDigit: true,
                    pwHasSpecial: true,
                    pwHasUpper: true,
                    pwHasLower: true
                },
                ConfirmPassword: {
                    required: true,
                    equalTo: "#NewPassword"
                },
            },
            messages: {
                NewPassword: {
                    required: $("#NewPassword").data("val-required"),
                    minlength: "新密碼長度最少為12碼"
                },
                ConfirmPassword: {
                    required: $("#ConfirmPassword").data("val-required"),
                    equalTo: $("#ConfirmPassword").data("val-equalto")
                }
            },
            invalidHandler: function(event, validator) {
                toastr.clear();
                for(var i = 0; i < validator.errorList.length; i++) {
                    toastr.error(validator.errorList[i].message);
                }
            }
        });

        // 自訂驗證規則
        $.validator.addMethod("pwHasDigit", function(value) {
            return /\d/.test(value);
        }, "新密碼必須包含數字");

        $.validator.addMethod("pwHasSpecial", function(value) {
            return /[^\w\d]/.test(value);
        }, "新密碼必須包含非字母數字符");

        $.validator.addMethod("pwHasUpper", function(value) {
            return /[A-Z]/.test(value);
        }, "新密碼必須包含大寫字母");

        $.validator.addMethod("pwHasLower", function(value) {
            return /[a-z]/.test(value);
        }, "新密碼必須包含小寫字母");
    </script>
}