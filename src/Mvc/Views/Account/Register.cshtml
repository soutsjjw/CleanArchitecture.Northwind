@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
    ViewData["Title"] = "帳號註冊";
}

<div class="container container-tight py-4">
    <div class="text-center mb-4">
        <a href="." class="navbar-brand navbar-brand-autodark">
            <img src="~/images/logo.svg" width="110" height="32" alt="Tabler" class="navbar-brand-image">
        </a>
    </div>
    <form asp-controller="Account" asp-action="Register" method="post" autocomplete="off" novalidate>
        <div class="card-body">
            <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="your@email.com" />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">密碼</label>
                <div class="input-group input-group-flat">
                    <input asp-for="Password" class="form-control" type="password" autocomplete="off" placeholder="請輸入密碼" />
                    <span class="input-group-text">
                        <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip">
                            <!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
                        </a>
                    </span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">確認密碼</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="確認密碼" />
            </div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">姓名</label>
                <input asp-for="FullName" class="form-control" placeholder="你的姓名" />
            </div>
            <div class="mb-3">
                <label asp-for="IDNo" class="form-label">身分證號</label>
                <input asp-for="IDNo" class="form-control" placeholder="身分證號" />
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label">職稱</label>
                <input asp-for="Title" class="form-control" placeholder="職稱" />
            </div>
            <div class="mb-3">
                <label class="form-check">
                    <input asp-for="AgreeToTerms" type="checkbox" class="form-check-input" />
                    <span class="form-check-label">同意<a asp-controller="Home" asp-action="TermsOfService" tabindex="-1">條款</a>與<a asp-controller="Home" asp-action="Privacy" tabindex="-1">政策</a></span>
                </label>
            </div>
            <div class="form-footer">
                <button type="submit" class="btn btn-primary w-100">Create new account</button>
            </div>
        </div>
    </form>
    <div class="text-center text-secondary mt-3">
        Already have account? <a href="./sign-in.html" tabindex="-1">Sign in</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validate/jquery.validate.min.js" defer></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" defer></script>
}